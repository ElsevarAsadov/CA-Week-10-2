@model SliderModel
@{
    ViewData["Title"] = "Create Slider";
}

<div class="container-fluid p-3">

    <form method="POST" asp-action="CreateSlider" asp-controller="Manage" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="UpperText" class="form-label">Upper Text</label>
            <input asp-for ="UpperText" class="form-control">
            <span asp-validation-for="UpperText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MiddleText"  class="form-label">Middle Text</label>
            <input asp-for="MiddleText"   class="form-control">
            <span asp-validation-for="MiddleText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BottomText" class="form-label">Bottom Text</label>
            <input asp-for="BottomText" class="form-control">
            <span asp-validation-for="BottomText" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="ButtonText" class="form-label">Button Text</label>
            <input asp-for="ButtonText" class="form-control">
            <span asp-validation-for="ButtonText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Image</label>
            <input asp-for="ImageFile" class="form-control">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>



