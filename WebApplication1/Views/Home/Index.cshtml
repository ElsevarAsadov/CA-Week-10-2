@using WebApplication1.Areas.Admin.Models;
@model List<SliderModel>


@{
    ViewData["Title"] = "AllUp";
}

<!--====== Slider Part Start ======-->
<section class="slider-area slider-active">
@foreach(SliderModel m in @Model)
{
    <div class="single-slider">
        <div class="slider-image">
            <img src="@m.ImagePath" style="width: 100vw;" alt="slider">
        </div>
        <div class="slider-content-wrapper">
            <div class="container-fluid custom-container">
                <div class="slider-content">
                        <h4 data-animation="fadeInDown" data-delay="0.5s" class="sub-title">@m.UpperText;</h4>
                        <h1 data-animation="fadeInLeft" data-delay="0.5s" class="main-title "><span>@m.MiddleText;</h1>
                        <p data-animation="fadeInRightBig" data-delay="0.5s">@m.BottomText;</p>
                        <a data-animation="zoomIn" data-delay="0.5s" class="main-btn " href="single-product.html">@m.ButtonText</a>
                </div>
            </div> <!-- container -->
        </div>
   </div>
}
    
</section>



<!--====== Banner Part Start ======-->

<div class="banner-area banner-bg">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-md-6">
